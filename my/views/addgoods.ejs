	</div>
</div>
</body>
</html>
<script>
	// 添加商品页面
	$(".tabbar-div span").click(function(){
		$(this).css("background","#fff")
				.siblings().css("background","#ececec")
		// 添加商品页面模块切换
		var index=$(this).index();
		$(".conshow").eq(index).css("display","block")
							.siblings(".conshow").css("display","none")
	})
	function addgoods() {
		document.getElementById("frm").submit();
	}
</script>