<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<script src="/javascripts/jquery-1.11.1.min.js"></script>
	<link rel="stylesheet" href="/stylesheets/register.css">
</head>
<body style="height:100%;padding:0">
<div class="login-body">
	<!-- 头部 -->
	<div class="head">
		<img src="/images/logo.png" alt="">
	</div>
	<!-- 内容区 -->
	<div class="main">
		<div class="logo-center">
			<img src="/images/logo2.png" alt="" width="373" height="103" border="0">
		</div>
		<div class="main-con">
			<div class="show">
				<div class="controls first">
					<img src="/images/tu3.png" alt="" class="iconfont">
					<input type="text" placeholder="用户名" name="username" id="username">
				</div>
				<div class="controls two">
					<img src="/images/tu4.png" alt="" class="iconfont">
					<input type="password" placeholder="密码" name="psw" id="psw">
				</div>
				<div class="controls three"> 
					<img src="/images/tu5.png" alt="" class="iconfont">
					<input type="text" placeholder="验证码" id="captchas">
				</div>
				<div class="controls last">
					<button onclick="register()" class="btn-a" >登录</button>
				</div>
				<div class="controls bside" style="border:none">
					<input type="checkbox" name="remember" id="remember">
					<label for="remember">保存登录信息</label>
					<a class="link-forget cl-link-blue" href="#">忘记密码?</a>
					<a class="link-home cl-link-blue" href="#">去店铺首页>></a>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	function register(){
		$.ajax({
			url:"/api/register",
			type:"post",
			data:{
				username:$("#username").val(),
				psw:$("#psw").val()
			},
			success:function(res){
				console.log(res);
					if(res.status == 1) {
							location.href = "/goods";
						} else {
							alert(res.message);
						}
			}
		})
	}
</script>
</body>
</html>